<body>
  <div class="text-box">
    <!-- Überschrift mit Wellen-Effekt, in zwei Zeilen und normalem Wortabstand -->
    <h2 class="chewy-regular wave">
      <span style="animation-delay: 0s;">Wo</span>
      <span style="animation-delay: 0.2s;">möchtest</span>
      <span style="animation-delay: 0.4s;">du</span>
      <br>
      <span style="animation-delay: 0.6s;">dein</span>
      <span style="animation-delay: 0.8s;">Geschenk</span>
      <span style="animation-delay: 1s;">einlösen?</span>
    </h2>

    <form id="locationForm" class="chewy-regular">
      <label class="checkbox-label">
        <span>Würzburg</span>
        <input type="checkbox" name="location" value="Würzburg" required>
      </label>
      <label class="checkbox-label">
        <span>Berlin</span>
        <input type="checkbox" name="location" value="Berlin">
      </label>
      <label class="checkbox-label">
        <span>Bielefeld</span>
        <input type="checkbox" name="location" value="Bielefeld">
      </label>
      <button type="submit">Weiter</button>
    </form>
  </div>

  <script>
    // Erlaube nur, dass eine Checkbox gleichzeitig aktiviert ist
    const checkboxes = document.querySelectorAll('input[name="location"]');
    checkboxes.forEach(chk => {
      chk.addEventListener('change', function() {
        if (this.checked) {
          checkboxes.forEach(other => {
            if (other !== this) {
              other.checked = false;
            }
          });
        }
      });
    });

    document.getElementById('locationForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const checkedBoxes = document.querySelectorAll('input[name="location"]:checked');
      if (checkedBoxes.length !== 1) {
        alert("Bitte wähle genau einen Ort aus.");
        return;
      }
      var location = checkedBoxes[0].value;
      sessionStorage.setItem('location', location);
      window.location.href = 'page3.html';
    });
  </script>
